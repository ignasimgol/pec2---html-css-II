{
  "extends": [
    "stylelint-config-recommended-scss"
  ],
  "plugins": [
    "stylelint-scss",
    "stylelint-order"
  ],
  "rules": {
    "order/properties-alphabetical-order": true,
    "max-nesting-depth": 5,
    "selector-max-id": 0,
    "scss/at-rule-no-unknown": true,
    "scss/dollar-variable-pattern": "^[_a-z]+[a-zA-Z0-9-]*$",
    "no-descending-specificity": null
  }
}
